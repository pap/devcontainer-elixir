{
    "name": "app-dev",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "app",
    "runServices": [
        "app"
    ],
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/workspace",
    // Sets proper permissions on the folder to hold elixir-artifacts
    "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/elixir-artifacts",
    // "overrideCommand": "",
    "extensions": [
        "jakebecker.elixir-ls",
        "benvp.vscode-hex-pm-intellisense",
        "iampeterbanjo.elixirlinter",
        "mikestead.dotenv",
        "davidanson.vscode-markdownlint",
        "ms-azuretools.vscode-docker",
        "IBM.output-colorizer",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "mohsen1.prettify-json",
        "shardulm94.trailing-spaces",
        "stkb.rewrap",
        "jrebocho.vscode-random",
        "mutantdino.resourcemonitor",
        "Gruntfuggly.todo-tree",
        "vscode-icons-team.vscode-icons",
        "pnp.polacode",
        "bierner.emojisense",
    ],
    "settings": {
        // General settings
        "files.eol": "\n",
        // Docker
        "remote.extensionKind": {
            "ms-azuretools.vscode-docker": "workspace"
        },
        // Based on Elixir formatter's style
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        // Provides smart completion for "do" and "fn ->" blocks. Does not run the Elixir formatter.
        "editor.formatOnType": true,
        // Misc
        "editor.wordBasedSuggestions": false,
        "editor.trimAutoWhitespace": false,
        // See below
        "editor.acceptSuggestionOnEnter": "off",
        // Elixir live view files association
        "files.associations": {
            "*.leex": "html-eex"
        },
        "emmet.includeLanguages": {
            "html-eex": "html"
        },
        "elixirLinter.useStrict": false
    }
}
